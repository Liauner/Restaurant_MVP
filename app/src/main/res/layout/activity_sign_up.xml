<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/tv_signup_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="请输入账号"
        android:textSize="23sp"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        />
    <EditText
        android:id="@+id/tv_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_signup_account"
        android:background="#ffffff"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="23sp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/tv_signup_repeatpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_signup_password"
        android:background="#ffffff"
        android:hint="重复输入密码"
        android:inputType="textPassword"
        android:textSize="23sp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btn_signup_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@id/tv_signup_repeatpassword"
        android:layout_marginTop="40dp"
        android:text="提交"
        android:textSize="23sp"
        android:background="#000000"
        android:textColor="#ffffff"
        />

</RelativeLayout>